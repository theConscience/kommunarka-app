.page__title,
.page__link
  position: relative
  display: inline-block
  font-family: $f_mono
  font-size: 2.25rem
  margin: 0
  margin-bottom: $title_bottom
  text-transform: uppercase
  text-decoration: none
  color: $white

  &:hover,
  &:focus
    text-decoration: none

  &::after
    content: ''
    position: absolute
    left: 0
    bottom: $unit_half
    width: 100%
    height: 2px
    background-color: $white

.page__link--back
  padding-left: $unitX3

  &::before
    content: ''
    position: absolute
    width: $unitX2
    height: $unitX2
    left: 0
    top: 50%
    transform: translateY(-50%)
    background-image: url('~assets/img/i-arrow-left.svg')
    background-size: contain
    background-position: center
    background-repeat: no-repeat
